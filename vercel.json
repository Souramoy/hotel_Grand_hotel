{
  "version": 2,
  "buildCommand": "npm run build:clean",
  "outputDirectory": "dist",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/uploads/(.*)",
      "dest": "/public/uploads/$1"
    },
    {
      "src": "^/assets/.*\\.js$",
      "headers": { "content-type": "application/javascript" },
      "continue": true
    },
    {
      "src": "^/assets/.*\\.css$",
      "headers": { "content-type": "text/css" },
      "continue": true
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}